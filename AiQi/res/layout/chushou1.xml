<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <TextView
          android:id="@+id/aiqi55"
          android:layout_width="fill_parent"
          android:layout_height="50dp"
          android:layout_gravity="center_horizontal"
          android:background="#ffeeff00"
          android:gravity="center"
          android:text="单车信息"
          android:textSize="28sp" />

    <ImageView
        android:id="@+id/danche11"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/aiqi55"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:background="@drawable/ic_launcher"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/price1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/danche11"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:text="名字"
          android:textSize="25sp"  />

    <Button
        android:id="@+id/goumai"
        android:layout_width="120dp"
        android:layout_height="60dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:background="#ffeeff00"
        android:text="购买"
        android:textSize="25sp" />

    <TextView
        android:id="@+id/descrip1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/price1"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="36dp"
        android:text="单车信息加载中,请稍后......" 
        android:textSize="20sp" />

    <ImageButton
        android:id="@+id/liuyan"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/price1"
        android:background="#ffeeff00"
        android:src="@android:drawable/ic_menu_edit" />

    <Button
        android:id="@+id/haoyoubt"
        android:layout_width="80dp"
        android:layout_height="35dp"
        android:layout_below="@+id/price1"
        android:layout_centerHorizontal="true"
        android:background="#ffeeff00"
        android:text="添加好友" />

    <ProgressBar
        android:id="@+id/danchejiazai"
        style="?android:attr/progressBarStyleLarge"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
      android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/danche11"
        android:layout_marginTop="56dp" />

</RelativeLayout>
