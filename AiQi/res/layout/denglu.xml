<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
<ImageView
        android:id="@+id/imageView1"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/dddc" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/denglubt"
        android:layout_alignLeft="@+id/denglubt"
        android:layout_marginBottom="20dp"
        android:background="#eeeeeeee"
        android:ems="10"
        android:hint="@string/BB"
        android:inputType="textPassword"
        android:textSize="28sp" />

    <EditText
        android:id="@+id/editText1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/editText2"
        android:layout_alignLeft="@+id/editText2"
        android:layout_marginBottom="15dp"
        android:background="#eeeeeeee"
        android:ems="10"
        android:hint="请输入登陆账号!"
        android:textSize="28sp" >

        <requestFocus />
    </EditText>

    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="38sp"
        android:layout_height="38sp"
        android:layout_alignTop="@+id/editText1"
        android:layout_toLeftOf="@+id/editText1"

        android:src="@android:drawable/ic_menu_my_calendar" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="30sp"
        android:layout_height="30sp"
        android:layout_alignBottom="@+id/editText2"
        android:layout_toLeftOf="@+id/editText2"
        android:src="@android:drawable/ic_secure" />

     <TextView
          android:id="@+id/aiqi"
          android:layout_width="fill_parent"
          android:layout_height="50dp"
          android:layout_gravity="center_horizontal"
          android:background="#ffeeff00"
          android:gravity="center"
          android:text="登录界面"
          android:textSize="28sp" />

     <ImageView
         android:id="@+id/imageView4"
         android:layout_width="200sp"
         android:layout_height="200sp"
         android:layout_below="@+id/aiqi"
         android:layout_centerHorizontal="true"
         android:src="@android:drawable/ic_menu_myplaces" />

     <Button
         android:id="@+id/denglubt"
         android:layout_width="200dp"
         android:layout_height="35dp"
         android:layout_alignParentBottom="true"
         android:layout_centerHorizontal="true"
         android:layout_marginBottom="80dp"
         android:background="#ffeeff00"
         android:text="登录" />

     <Button
         android:id="@+id/dzc"
         android:layout_width="200dp"
         android:layout_height="35dp"
         android:layout_alignLeft="@+id/denglubt"
         android:layout_alignParentBottom="true"
         android:layout_marginBottom="32dp"
         android:background="#ffeeff00"
         android:text="注册" />
    
</RelativeLayout>
