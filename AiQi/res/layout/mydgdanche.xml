<?xml version="1.0" encoding="utf-8"?>  
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"  
    android:layout_width="fill_parent"  
    android:layout_height="wrap_content"  
    android:background="@android:color/white"  
     >
   <TextView
          android:id="@+id/aiqi123"
          android:layout_width="fill_parent"
          android:layout_height="50dp"
          android:layout_gravity="center_horizontal"
          android:background="#ffeeff00"
          android:gravity="center"
          android:text="我订购的单车"
          android:textSize="28sp" />

        <ImageView
            android:id="@+id/mydgshangpin1"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/aiqi123" />

        <TextView
            android:id="@+id/te1546"
            android:layout_width="fill_parent"
            android:layout_height="200dp"
            android:layout_below="@+id/mydgshangpin1"
            android:layout_centerHorizontal="true"
            android:text="电车描述"
            android:textSize="23sp" />

        <Button
            android:id="@+id/shouhuobt"
            android:layout_width="100dp"
            android:layout_height="40dp"
            android:layout_below="@+id/te1546"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
              android:background="#ffeeff00"
            android:text="确认收货" 
             android:textSize="15sp" />
  
</RelativeLayout>  