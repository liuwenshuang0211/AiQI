<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    <TextView
          android:id="@+id/aiqi55"
          android:layout_width="fill_parent"
          android:layout_height="50dp"
          android:layout_gravity="center_horizontal"
          android:background="#ffeeff00"
          android:gravity="center"
          android:text="单车信息"
          android:textSize="28sp" />

    <ImageView
        android:id="@+id/danche111"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_below="@+id/aiqi55"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="14dp"
        android:background="@drawable/ic_launcher"
        android:scaleType="fitXY" />

    <TextView
        android:id="@+id/descrip11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/danche111"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="描述"
        android:textSize="25sp" />

    <Button
        android:id="@+id/xiajiabt"
        android:layout_width="80dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="25dp"
        android:background="#ffeeff00"
        android:text="下架"
        android:textSize="23sp" />

    <TextView
        android:id="@+id/dingou"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/xiajiabt"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="24dp"
        android:text="" 
         android:textSize="23sp" />

</RelativeLayout>
