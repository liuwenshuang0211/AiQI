<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    
<ImageView
        android:id="@+id/tupain"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/bb" 
         />

    <EditText
        android:id="@+id/txtpwd"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@+id/txtnum"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/txtnum"
        android:layout_marginTop="26dp"
         android:hint="请输入密码!"
        android:ems="10" />

        

    <EditText
        android:id="@+id/txtnum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginTop="191dp"
         android:hint="请输入1~10数字！"
        android:ems="10" />
    <TextView
          android:id="@+id/zhucelan"
          android:layout_width="fill_parent"
          android:layout_height="50dp"
          android:layout_gravity="center_horizontal"
          android:background="#ffeeff00"
          android:gravity="center"
          android:text="注册界面"
          android:textSize="28sp" />

    <Button
        android:id="@+id/zhuce"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/txtpwd"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="31dp"
        android:background="#ffeeff00"
        android:text="注册"
        android:textSize="25sp" />

    <EditText
        android:id="@+id/yonghu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView1"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="39dp"
         android:hint="请输入用户名!"
        android:ems="10" > 
        
        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/yonghu"
        android:layout_alignBottom="@+id/yonghu"
        android:layout_alignRight="@+id/textView1"
        android:text="用户名:"
        android:textSize="28sp" />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/txtnum"
        android:layout_alignBottom="@+id/txtnum"
        android:layout_toLeftOf="@+id/txtnum"
        android:text="登录账号:"
        android:textSize="23sp" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/txtpwd"
        android:layout_toLeftOf="@+id/txtpwd"
        android:text="密码:"
        android:textSize="28sp" />

</RelativeLayout>
